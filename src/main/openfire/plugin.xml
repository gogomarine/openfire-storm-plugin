<plugin>
  <!-- Main plugin class -->
  <class>com.roosher.storm.xmpp.plugin.StormPlugin</class>

  <!-- Plugin meta-data -->
  <name>${pom.name}</name>
  <description>${pom.description}</description>
  <author>Gogo Cao</author>
  <version>${pom.version}</version>
  <date>${openfire-plugin.build.date}</date>
  <minServerVersion>3.3.0</minServerVersion>
  <databaseKey>blocklist</databaseKey>
  <databaseVersion>1</databaseVersion>
  <licenseType>gpl</licenseType>

  <!-- Admin console meta-data -->
  <adminconsole>
    <tab id="tab-server">
        <sidebar id="sidebar-server-settings">
            <item id="storm-props-admin" name="Storm Blocklist"
                url="storm-props-admin.jsp"
                description="Click to configure storm blocklist" />
        </sidebar>
    </tab>
  </adminconsole>
</plugin>